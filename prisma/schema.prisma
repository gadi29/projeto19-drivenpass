// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  password      String
  createdAt     DateTime        @default(now())
  credentials   credentials[]
  secureNotes   secureNotes[]
  cards         cards[]
  wifiRegisters wifiRegisters[]
}

model credentials {
  id        Int      @id @default(autoincrement())
  user      users    @relation(fields: [userId], references: [id])
  userId    Int
  title     String
  url       String
  userName  String
  password  String
  createdAt DateTime @default(now())

  @@unique([userId, title])
}

model secureNotes {
  id         Int      @id @default(autoincrement())
  user       users    @relation(fields: [userId], references: [id])
  userId     Int
  title      String
  annotation String
  createdAt  DateTime @default(now())

  @@unique([userId, title])
}

model cards {
  id             Int      @id @default(autoincrement())
  user           users    @relation(fields: [userId], references: [id])
  userId         Int
  title          String
  number         String
  cardholderName String
  espirationDate String
  securityNumber String
  password       String
  isVirtual      Boolean
  type           cardType @default(BOTH)
  createdAt      DateTime @default(now())

  @@unique([userId, title])
}

enum cardType {
  CREDIT
  DEBIT
  BOTH
}

model wifiRegisters {
  id          Int      @id @default(autoincrement())
  user        users    @relation(fields: [userId], references: [id])
  userId      Int
  title       String
  networkName String
  password    String
  createdAt   DateTime @default(now())

  @@unique([userId, title])
}
